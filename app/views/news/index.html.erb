<h1>Listing news</h1>

<table class="table">
  <tr>
    <th>Title</th>
    <th>Created at</th>
    <th></th>
    <th></th>
  </tr>

<% @news.each do |news| %>
  <tr>
    <td><%= news.title %></td>
    <td><%= news.created_at %></td>
    <td><%= link_to 'Show', news %></td>
  </tr>
<% end %>
</table>

<%= paginate @news, :window => 3 %>
