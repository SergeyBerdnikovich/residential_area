<div class="btn-group" data-toggle="buttons-radio">
  <button class="btn btn-info active", id="show_company"><%= I18n.t('developer.company') %></button>
  <button class="btn btn-info", id="show_heads"><%= I18n.t('developer.heads') %></button>
  <button class="btn btn-info", id="show_partners"><%= I18n.t('developer.partners') %></button>
</div>

<div id="info">
  <%= render 'show_company' %>
</div>

<script>
  $(function(){
    $('#show_company').click(function(){
      $('#info').html("<%=escape_javascript(render("show_company"))%>");
    });
    $('#show_heads').click(function(){
      $('#info').html("<%=escape_javascript(render("show_heads"))%>");
    });
    $('#show_partners').click(function(){
      $('#info').html("<%=escape_javascript(render("show_partners"))%>");
    });
  })
</script>