<!DOCTYPE html>
<html>
<head>
  <%= yield :head %>
  <title>ResidentialArea</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span2">
        <ul class="nav nav-list">
          <li class="nav-header">Меню</li>
          <li class="dropdown-submenu">
            <a tabindex="-1" href="#"><i class="icon-home"></i>Жилищное строительство</a>
            <ul class="dropdown-menu">
              <li class="active"><a href="#"><i class="icon-home"></i>Готовые</a></li>
              <li>
                <% @completed_houses.each do |house| %>
                  <%= link_to "#{house.title}", house_path(house)%>
                <% end %>
              </li>
              <li class="active"><a href="#"><i class="icon-wrench"></i>Строятся</a></li>
              <li>
                <% @uncompleted_houses.each do |house| %>
                  <%= link_to "#{house.title}", house_path(house)%>
                <% end %>
              </li>
            </ul>
          </li>
          <li class="dropdown-submenu">
            <a tabindex="-1" href="#"><i class="icon-home"></i>Комерческие объекты</a>
            <ul class="dropdown-menu">
              <li>
                <% @not_residential_apartments.each do |apartment| %>
                  <%= link_to "#{apartment.title}", house_apartment_path(apartment.house, apartment)%>
                <% end %>
              </li>
            </ul>
          </li>
          <li><a href="/pages/developer"><i class="icon-user"></i>Застройщик</a></li>
          <li><a href="/news"><i class="icon-info-sign"></i>Новости</a></li>
          <li><a href="/pages/files"><i class="icon-file"></i>Юридический отдел</a></li>
          <li><a href="/pages/contacts"><i class="icon-envelope"></i>Контактная информация</a></li>
        </ul>
      </div>
      <div class="span10">
        <div id="user_nav">
          <% if user_signed_in? %>
            User: <%= current_user.email %>
            Role: <%= current_user.role.name %>
            <%= link_to "sign out", destroy_user_session_path, :method => "DELETE" %>
          <% else %>
            <%= link_to "sign in", new_user_session_path %> or <%= link_to "sign up", new_user_registration_path %>
          <% end %>
        </div>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <%= yield %>
      </div>
    </div>
  </div>
</body>
<%= yield :scripts %>
</html>
