<!DOCTYPE html>
<html>
<head>
  <%= yield :head %>
  <title>ResidentialArea</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <link rel="stylesheet" type="text/css" href="/assets/twitter-bootstrap/bootstrap.scss">
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container" style="background-color:white">
    <div class="span12">
      <div class="upper_zone">
        <%= render "layouts/zone/upper_zone" %>
      </div>
    </div>
    <div class="row">
      <div class="span2">
        <div class="left_zone">
          <%= render "layouts/zone/left_zone" %>
        </div>
      </div>
      <div class="span10">
        <p class="notice"><%= notice %></p>
        <div class="content_zone">
          <%= yield %>
          <br><br><br><br><br><br>
        </div>
      </div>
    </div>
    <div class="span12">
      <div class="lower_zone">
        <div class="navbar navbar-fixed-bottom">
          <%= render "layouts/zone/lower_zone" %>
        </div>
      </div>
    </div>
  </div>
</body>
<%= yield :scripts %>
</html>
