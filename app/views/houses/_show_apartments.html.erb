<% apartments.each do |apartment| %>
  <a href= <%= house_apartment_path(@house, apartment) %> title= <%= apartment.title %>>
    <% if apartment.galleries.first %>
      <%= image_tag apartment.galleries.first.image.url(:for_gallery) %>
    <% else %>
      <%= image_tag "/assets/rails.png" %>
    <% end %>
  </a>
<% end %>