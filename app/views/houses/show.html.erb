<p id="notice"><%= notice %></p>

<span class="label label-success">Название</span><br>
<%= @house.title %><br>
<div class="btn-group" data-toggle="buttons-checkbox">
  <button type="button" class="btn btn-success", id="show_description" >Описание</button>
  <button type="button" class="btn btn-success", id="show_residential_apartments" >Квартиры</button>
  <button type="button" class="btn btn-success", id="show_not_residential_apartments" >Комерческие объекты</button>
</div>

<div id="description" class="hide">
  <%= render 'show_description' %>
</div>
<br>

<div id="residential_apartments" class="hide">
  <%= render :partial => 'show_apartments',
             :locals => { :apartments => @residential_apartments } %>
</div>
<br>

<div id="not_residential_apartments" class="hide">
  <%= render :partial => 'show_apartments',
             :locals => { :apartments => @not_residential_apartments } %>
</div>
<%= render 'show_gallery' %>
<span class="label label-success">Карта</span>
<%= gmaps("markers" => { "data" => @json },
          "map_options" => { "zoom" => 15,
                             "auto_adjust" => true,
                             "auto_zoom" => false,
                             "language" => 'ru' },) %>
