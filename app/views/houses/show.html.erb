<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @house.title %>
</p>

<p>
  <b>Description:</b>
  <%= @house.description %>
</p>

<p>
  <b>Address:</b>
  <%= @location.address if @location %>
</p>

<%= link_to 'Description', "#" %>

<% unless @house.apartments.blank? %>
  <%= link_to 'Apartmens', house_apartments_path(@house) %>
<% else %>
  <%= link_to 'Add apartmens', new_house_apartment_path(@house) %>
<% end %>
<br>
<div id="gallery">
    <ul>
      <% @gallery.each do |photo| %>
        <li>
            <a href=<%= "#{photo.image.url}" %> title=<%= "#{photo.image_file_name}" %>>
                <%= image_tag photo.image.url(:small) %>
            </a>
        </li>
      <% end %>
    </ul>
</div>
<br>
<%= gmaps("markers" => {"data" => @json,
                        "options" => { "picture" => ActionController::Base.helpers.asset_path('kafe.png'),
                                       "width" => 60,
                                       "length" => 60 } },
          "map_options" => {"zoom" => 15,
                            "auto_adjust" => true,
                            "auto_zoom" => false,
                            "language" => 'ru'},) %>

<%= link_to 'Edit', edit_house_path(@house) %>
<%= link_to 'Destroy', @house, method: :delete, data: { confirm: 'Are you sure?' } %><br>
<%= link_to 'Back', houses_path %>
