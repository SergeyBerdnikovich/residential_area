<%= tinymce_assets %>
<script type="text/javascript">
tinyMCE.init({
  theme: 'advanced',
  language : 'ru',
  mode : "textareas",
  plugins : "uploadimage, advimage, emotions",
  theme_advanced_buttons3_add : "uploadimage, emotions",
  relative_urls : false,
  remove_script_host : true
});
</script>

<%= form_for [:admin, @news] do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, :rows => 30, :cols => 120 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

