<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @partner.title %>
</p>

<p>
  <b>Description:</b>
  <%= @partner.description %>
</p>

<p>
  <b>Phone number:</b><br>
  <% @partner.phone_numbers.each do |phone_number| %>
    <%= phone_number.number %><br>
  <% end %>
</p>

<p>
  <b>Address:</b>
  <%= @partner.location.address if @partner.location %>
</p>
<%= gmaps("markers" => { "data" => @json },
          "map_options" => { "zoom" => 15,
                             "auto_adjust" => true,
                             "auto_zoom" => false,
                             "language" => 'ru' },) if @json %>
