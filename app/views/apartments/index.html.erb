<h1>Listing apartments</h1>

<table>
  <tr>
    <th>House</th>
    <th>Title</th>
    <th>Description</th>
    <th>Cost</th>
    <th>Space</th>
    <th>Number of rooms</th>
    <th>Residential</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @apartments.each do |apartment| %>
  <tr>
    <td><%= apartment.house.title %></td>
    <td><%= apartment.title %></td>
    <td><%= apartment.description %></td>
    <td><%= apartment.cost %></td>
    <td><%= apartment.space %></td>
    <td><%= apartment.number_of_rooms %></td>
    <td><%= apartment.residential %></td>
    <td><%= link_to 'Show', apartment %></td>
    <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
    <td><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

